<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수학 수행평가"
                android:fontFamily="@font/noto_bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/item_schedule_title"
                android:includeFontPadding="false"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10월 7일"
                android:fontFamily="@font/noto_bold"
                android:textSize="12sp"
                android:id="@+id/item_schedule_date"
                app:layout_constraintTop_toBottomOf="@id/item_schedule_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선린인터넷고등학교"
                android:fontFamily="@font/noto_bold"
                android:textSize="12sp"
                android:id="@+id/item_schedule_owner"
                app:layout_constraintTop_toTopOf="@id/item_schedule_date"
                app:layout_constraintRight_toRightOf="parent"
                android:includeFontPadding="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </soup.neumorphism.NeumorphCardView>

</androidx.constraintlayout.widget.ConstraintLayout>